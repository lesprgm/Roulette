{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Page",
  "type": "object",
  "required": ["components", "layout", "palette", "links", "seed", "model_version"],
  "properties": {
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "props"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["hero", "card", "cta", "grid", "text", "image"]
          },
          "props": { "type": "object", "additionalProperties": true }
        },
        "additionalProperties": false
      }
    },
    "layout": {
      "type": "object",
      "properties": {
        "flow": { "type": "string", "enum": ["grid", "stack"] }
      },
      "additionalProperties": true
    },
    "palette": {
      "type": "object",
      "properties": {
        "primary": { "type": "string" },
        "accent": { "type": "string" }
      },
      "additionalProperties": true
    },
    "links": { "type": "array", "items": { "type": "string" } },
    "seed": { "type": "integer" },
    "model_version": { "type": "string" }
  },
  "additionalProperties": false
}
