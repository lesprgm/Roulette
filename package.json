{
  "name": "non-deterministic-website",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:vendor": "node scripts/build_vendor.js",
    "build:css": "npx @tailwindcss/cli -i ./styles/input.css -o ./static/tailwind.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./styles/input.css -o ./static/tailwind.css --watch",
    "build:ts": "tsc -p tsconfig.frontend.json",
    "watch:ts": "tsc -p tsconfig.frontend.json -w",
    "typecheck": "tsc --noEmit --project tsconfig.frontend.json",
    "lint": "eslint \"static/ts-src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"static/ts-src/**/*.{ts,tsx}\"",
    "format": "prettier --write .",
    "test:frontend": "vitest run",
    "build": "npm run build:vendor && npm run build:css && npm run build:ts",
    "watch": "(npm run watch:css & npm run watch:ts)"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.14.0",
    "happy-dom": "^15.11.7",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "description": "An opinionated starter for generating and serving web pages from structured JSON: - A strict JSON Schema defines the page shape. - Prompts guide JSON-only LLM outputs. - A FastAPI backend validates and serves JSON (and an optional demo page). - Tailwind builds CSS from a simple source file.",
  "main": "postcss.config.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "baseline-browser-mapping": "^2.8.6",
    "browserslist": "^4.26.2",
    "caniuse-lite": "^1.0.30001743",
    "electron-to-chromium": "^1.5.221",
    "escalade": "^3.2.0",
    "fraction.js": "^4.3.7",
    "nanoid": "^3.3.11",
    "node-releases": "^2.0.21",
    "normalize-range": "^0.1.2",
    "picocolors": "^1.1.1",
    "postcss-value-parser": "^4.2.0",
    "source-map-js": "^1.2.1",
    "three": "^0.160.0",
    "update-browserslist-db": "^1.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lesprgm/non-deterministic-website.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lesprgm/non-deterministic-website/issues"
  },
  "homepage": "https://github.com/lesprgm/non-deterministic-website#readme"
}
